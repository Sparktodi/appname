 <% provide :page_title, 'All questions' %>

<h1 class="mb-4">Questions</h1>
<%= paginate @questions %>

<% @questions.each do |question| %>
  <article class="card">
    <section class="card-header">
      <%= gravatar_for question.user %>
      <%= question.user.email %>
    </section>

    <div class="card-body">
      <h2><%= question.title %></h2>

      <section class="card-text">
        <time datetime="<%= question.created_at %>">
          <small><%= l question.created_at, :format => :long %></small>
        </time>

        <p>
          <%= truncate question.body, length: 150 %>
        </p>
      </section>

    <%= link_to t('btn.show'), question_path(question), class: 'btn btn-primary' %>
    <% if policy(question).edit? %>
      <%= link_to t('btn.edit'), edit_question_path(question), class: 'btn btn-secondary' %>
    <% end %>
    <% if policy(question).destroy? %>
      <%= link_to t('btn.delete'), question_path(question), class: 'btn btn-danger', data: {method: :delete, confirm: 'Are you sure?'} %>
    <% end %>
    </div>
  </article>
  <br />
<% end %>
<%= paginate @questions %>