 <% provide :page_title, t('question.head') %>



<h1 class="mb-4"><%= t('question.head')%></h1>

<%= render 'search_form' %>
<br />
<%= paginate @questions %>

<% @questions.each do |question| %>
  <article class="card">
    <section class="card-header">
      <%= gravatar_for question.user %>
      <%= question.user.email %>
    </section>

    <div class="card-body">
      <h2><%= question.title %></h2>

      <section class="card-text">
        <time datetime="<%= question.created_at %>">
          <small><%= l question.created_at, :format => :long %></small>
        </time>

        <p>
          <%= truncate question.body, length: 150 %>
        </p>
      </section>
    <%= link_to t('btn.show'), question_path(question), class: 'btn btn-primary' %>
    </div>
  </article>
  <br />
<% end %>
<%= paginate @questions %>