<%= render 'shared/errors', object: @question %>

<%= form_with model: @question do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :title %>
    </div>
    
    <div class="col-sm-10">
    <%= f.text_field :title, placeholder: "Title", class: 'form-control m-2' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, placeholder: "Text", class: 'form-control m-2' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :photo %>
    </div>

    <div class="col-sm-10">
      <%= f.file_field :photo %>
      <%= f.hidden_field :photo_cache %>

      <% if @question.photo? %>
        <%= image_tag @question.photo.thumb.url %>
        <div>
          <%= label_tag :remove_photo do %>
            Remove image
            <%= f.check_box :remove_photo %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <%= f.submit t('btn.submit'), class: 'btn btn-primary' %>
<% end %> 