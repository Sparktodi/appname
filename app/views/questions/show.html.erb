<% provide :page_title, 'Question' %>
<h1 class="mb-4"><%= @question.title %></h1>
<time datetime="<%= @question.formatted_created_at %>">
  <%= @question.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
</time>
<p class="lead my-3">
  <%= @question.body %>
</p>

<%= link_to 'Show', question_path(@question), class: 'btn btn-primary' %>
<%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-secondary' %>
<%= link_to 'Delete', question_path(@question), class: 'btn btn-danger', data: {method: :delete, confirm: 'Are you sure?'} %>

<h2 class="mt-5">Answers</h2>
<%= paginate @answers %>

<% @answers.each do |answer| %>
  <article class="mb-3 card">
    <div class="card-body">
      <section class="card-text">
        <time datetime="<%= answer.formatted_created_at %>">
          <%= answer.formatted_created_at %>
        </time>

        <p class="mt-2 mb-3">
          <%= answer.body %>
        </p>
      </section>

      <%= link_to 'Delete', question_answer_path(@question, answer), class: 'btn btn-danger btn-sm', data: {method: :delete, confirm: 'Are you sure?'} %>
      <%= link_to 'Edit', edit_question_answer_path(@question, answer), class: 'btn btn-info btn-sm' %>
    </div>
  </article>
<% end %>

<%= paginate @answers %>

<hr class="my-3">

<h2>Write your answer</h2>

<%= render 'answers/form_answers' %>