<% provide :page_title, 'Question' %>

<div class="mb-3">
  <%= gravatar_for @question.user %>
  <%= @question.user.email %>
</div>

<time datetime="<%= @question.created_at %>">
  <%= l @question.created_at, :format => :long %>
</time>


<h2 class="mb-4"><%= @question.title %></h2>

<p class="lead my-3">
  <%= @question.body %>
</p>

<%= link_to t('btn.edit'), edit_question_path(@question), class: 'btn btn-secondary' %>
<%= link_to t('btn.delete'), question_path(@question), class: 'btn btn-danger', data: {method: :delete, confirm: 'Are you sure?'} %>

<h2 class="mt-5">Answers</h2>
<%= paginate @answers  %>

<% @answers.each do |answer| %>
  <article class="mb-3 card">
    <div class="card-body">
      <section class="card-text">
        <div class="mb-3">
          <%= gravatar_for answer.user %>
          <%= answer.user.email %>
        </div>

        <time datetime="<%= answer.created_at %>">
          <%= l answer.created_at, :format => :long %>
        </time>

        <p class="mt-2 mb-3">
          <%= answer.body %>
        </p>
      </section>

      <%= link_to t('btn.delete'), question_answer_path(@question, answer), class: 'btn btn-danger btn-sm', data: {method: :delete, confirm: 'Are you sure?'} %>
      <%= link_to t('btn.edit'), edit_question_answer_path(@question, answer), class: 'btn btn-info btn-sm' %>
    </div>
  </article>
<% end %>

<%= paginate @answers %>

<hr class="my-3">

<h2>Write your answer</h2>

<%= render 'answers/form_answers' %>